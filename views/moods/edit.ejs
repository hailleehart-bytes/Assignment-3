<div class="card">
    <h2>Edit Mood Entry</h2>

    <form action="/moods/edit/<%= mood._id %>" method="POST">
        <label>Mood</label>
        <select name="mood">
            <option <%= mood.mood === "Happy" ? "selected" : "" %>>Happy</option>
            <option <%= mood.mood === "Sad" ? "selected" : "" %>>Sad</option>
            <option <%= mood.mood === "Angry" ? "selected" : "" %>>Angry</option>
            <option <%= mood.mood === "Calm" ? "selected" : "" %>>Calm</option>
            <option <%= mood.mood === "Anxious" ? "selected" : "" %>>Anxious</option>
        </select>

        <label>Notes</label>
        <textarea name="notes" rows="4"><%= mood.notes %></textarea>

        <button type="submit">Update</button>
    </form>
</div>
