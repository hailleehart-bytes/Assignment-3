<h2>Edit Mood Entry</h2>

<form action="/moods/edit/<%= entry._id %>?_method=PUT" method="post">

  <div class="mb-3">
    <label>Mood Score</label>
    <select name="moodScore" class="form-select">
      <% for (let i=1; i<=5; i++) { %>
        <option value="<%= i %>" <%= entry.moodScore === i ? 'selected' : '' %>><%= i %></option>
      <% } %>
    </select>
  </div>

  <div class="mb-3">
    <label>Emotion</label>
    <input class="form-control" name="emotion" value="<%= entry.emotion %>">
  </div>

  <div class="mb-3">
    <label>Journal</label>
    <textarea class="form-control" name="journalText" rows="4"><%= entry.journalText %></textarea>
  </div>

  <button class="btn btn-primary">Update</button>
  <a class="btn btn-secondary" href="/dashboard">Cancel</a>

</form>
