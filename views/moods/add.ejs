<div class="add-container">

  <h1 class="add-title">New Mood Entry</h1>

  <form action="/moods/add" method="POST" class="add-form">

    <!-- Mood Picker -->
    <label class="section-label">CHOOSE YOUR MOOD</label>
    <div class="mood-picker">
      <% ["confused","angry","stressed","happy","sad"].forEach(m => { %>
        <label class="mood-select">
          <input type="radio" name="mood" value="<%= m %>">
          <img src="/images/<%= m %>.png" class="mood-select-img">
        </label>
      <% }) %>
    </div>

    <!-- Description -->
    <label class="section-label">DESCRIPTION</label>
    <textarea class="input-box" name="description" placeholder="Type why you're feeling this way......"></textarea>

    <!-- Date -->
    <label class="section-label">DATE</label>
    <input class="input-box" type="date" name="date">

    <button class="submit-btn">Save Entry</button>
  </form>

</div>
