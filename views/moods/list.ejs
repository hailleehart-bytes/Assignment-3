<h2>Your Mood Entries</h2>

<a class="add-entry" href="/moods/add">âž• Add Entry</a>

<div class="entries-panel">

    <% if (entries.length === 0) { %>
        <p>No entries yet.</p>
    <% } %>

    <% entries.forEach(entry => { %>
        <div class="entry-row">
            <div class="entry-icon <%= entry.mood %>"></div>

            <div class="entry-content">
                <div class="entry-date">
                    <a href="/moods/<%= entry._id %>">
                        <%= new Date(entry.date).toLocaleString() %>
                    </a>
                </div>

                <div class="entry-text">
                    <%= entry.journalText %>
                </div>
            </div>
        </div>
    <% }) %>
</div>
