

<div class="page-container">

  <!-- Mood Board -->
  <section class="mood-board">
    <h2>Mood Board:</h2>
    <div class="mood-icons">
      <% ["confused","happy","stressed","angry","sad"].forEach(mood => { %>
        <div class="mood-item">
          <img src="/images/<%= mood %>.png" class="mood-img">
          <p><%= mood.charAt(0).toUpperCase() + mood.slice(1) %></p>
        </div>
      <% }) %>
    </div>
  </section>

  <!-- Add Entry Button -->
  <div class="add-entry-btn">
    <a href="/moods/add"><span>+</span> Add Entry</a>
  </div>

  <!-- Entries Section -->
  <section class="entries-section">
    <h2>Mood Entries</h2>
    <h3 class="entries-subtitle">WHY ARE YOU FEELING THIS WAY?</h3>

    <% if (moods.length === 0) { %>
      <p>No entries yet.</p>
    <% } %>

    <% moods.forEach(m => { %>
      <div class="entry-card">
        <div class="entry-left">
          <img src="/images/<%= m.mood %>.png" class="entry-mood-img">
        </div>

        <div class="entry-right">
          <h4><%= m.dateFormatted %></h4>
          <p><%= m.description %></p>

          <!-- CRUD buttons -->
          <div class="entry-actions">
            <a href="/moods/edit/<%= m._id %>">Edit</a> |
            <a href="/moods/delete/<%= m._id %>">Delete</a>
          </div>
        </div>
      </div>
    <% }) %>

  </section>
</div>


