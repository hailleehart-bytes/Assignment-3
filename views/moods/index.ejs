<%- include("../partials/header") %>

<div class="page-container">

  <!-- Mood Board -->
  <section class="mood-board">
    <h2>Mood Board:</h2>
    <div class="mood-icons">
      <div class="mood-item">
        <img src="/images/confused.png" class="mood-img">
        <p>Confused</p>
      </div>
      <div class="mood-item">
        <img src="/images/happy.png" class="mood-img">
        <p>Happy</p>
      </div>
      <div class="mood-item">
        <img src="/images/stressed.png" class="mood-img">
        <p>Stressed</p>
      </div>
      <div class="mood-item">
        <img src="/images/angry.png" class="mood-img">
        <p>Angry</p>
      </div>
      <div class="mood-item">
        <img src="/images/sad.png" class="mood-img">
        <p>Sad</p>
      </div>
    </div>
  </section>

  <!-- Add Entry Button -->
  <div class="add-entry-btn">
    <a href="/moods/add"><span>+</span> Add Entry</a>
  </div>

  <!-- Entries Section -->
  <section class="entries-section">
    <h2>Mood</h2>
    <h3 class="entries-subtitle">WHY ARE YOU FEELING THIS WAY?</h3>

    <% if (moods.length === 0) { %>
      <p>No entries yet.</p>
    <% } %>

    <% moods.forEach(m => { %>
      <div class="entry-card">
        <div class="entry-left">
          <img src="/images/<%= m.mood %>.png" class="entry-mood-img">
        </div>

        <div class="entry-right">
          <h4><%= m.dateFormatted %></h4>
          <p><%= m.description %></p>
        </div>
      </div>
    <% }) %>

  </section>
</div>

<%- include("../partials/footer") %>
