<div class="card">
    <h1>Welcome to Your Mood Journal ðŸ’–</h1>
    <p>Select a mood from the board or add a new entry!</p>
</div>

<div class="mood-board">
    <div class="board-title">Mood Board:</div>

    <div class="board-row">
        <div class="board-item"><div class="icon confused"></div>Confused</div>
        <div class="board-item"><div class="icon happy"></div>Happy</div>
        <div class="board-item"><div class="icon stressed"></div>Stressed</div>
        <div class="board-item"><div class="icon angry"></div>Angry</div>
        <div class="board-item"><div class="icon sad"></div>Sad</div>
    </div>
</div>

<a class="add-entry" href="/moods/add">âž• Add Entry</a>

<div class="entries-panel">
    <% if (!entries || entries.length === 0) { %>
        <div>No entries yet.</div>
    <% } %>

    <% entries.forEach(entry => { %>
        <div class="entry-row">
            <div class="entry-icon <%= entry.mood %>"></div>

            <div class="entry-content">
                <div class="entry-date">
                    <a href="/moods/<%= entry._id %>"><%= new Date(entry.date).toLocaleString() %></a>
                </div>

                <div class="entry-text"><%= entry.journalText %></div>
            </div>
        </div>
    <% }) %>
</div>
